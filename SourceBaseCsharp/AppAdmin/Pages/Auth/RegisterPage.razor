@page "/auth/register"
@using MudThemeLibrary.Handlers

<PageTitle>RegisterPage</PageTitle>

<MudContainer MaxWidth="MaxWidth.Small">
    <div class="mb-10">
        <MudText Typo="Typo.h3" Align="Align.Center" GutterBottom="true">Đăng ký</MudText>
        <MudText Align="Align.Center">Đăng ký lẹ đi, còn vào chơi với người ta, ở đó mà chần chờ hoài.</MudText>
    </div>
    <MudPaper>
        <EditForm Model="@_userRegister" OnValidSubmit="@OnValidSubmit">
            <DataAnnotationsValidator />
            <MudCard Elevation="0">
                <MudCardContent>
                    <MudTextField Class="mb-3" @bind-Value="_userRegister.Email" For="@(() => _userRegister.Email)" Label="Email" />
                    <MudTextField Class="mb-3" @bind-Value="_userRegister.Password" For="@(() => _userRegister.Password)" Label="Mật khẩu" InputType="InputType.Password" />
                    <MudTextField @bind-Value="_userRegister.ConfirmPassword" For="@(() => _userRegister.ConfirmPassword)" Label="Xác nhận mật khẩu" InputType="InputType.Password" />
                </MudCardContent>
                <MudCardActions>
                    <MudButton Disabled="_processing" ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto">
                        @if (_processing)
                        {
                            <MudProgressCircular Class="ms-n1 mr-2" Size="Size.Small" Indeterminate="true" />
                        }
                        <MudText>Đăng ký</MudText>
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </EditForm>
    </MudPaper>
    <div class="my-3">
        <MudText Align="Align.Center">
            Mầy có tài khoản rồi hay gì? <MudLink href="/auth/login">Đăng nhập</MudLink>
        </MudText>
    </div>
</MudContainer>